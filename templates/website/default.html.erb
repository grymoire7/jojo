  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= seeker_name %> - Application for <%= company_name %>">
  <title><%= seeker_name %> | <%= company_name %><% if job_title %> - <%= job_title %><% end %></title>
